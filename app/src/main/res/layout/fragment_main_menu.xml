<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent">
    <LinearLayout
        style="@style/MainMenu.item"
        android:id="@+id/option.candidates">
        <ImageView
            style="@style/MainMenu.icon"
            android:src="@drawable/candidatos" />
        <TextView
            style="@style/MainMenu.text"
            android:text="@string/mainmenu.candidates" />
    </LinearLayout>
    <LinearLayout
        style="@style/MainMenu.item"
        android:id="@+id/option.commission">
        <ImageView
            style="@style/MainMenu.icon"
            android:src="@drawable/commission"
            />
        <TextView
            style="@style/MainMenu.text"
            android:text="@string/mainmenu.commission"/>
    </LinearLayout>
    <LinearLayout
        style="@style/MainMenu.item"
        android:id="@+id/option.election_process">
        <ImageView
            style="@style/MainMenu.icon"
            android:src="@drawable/election"
            />
        <TextView
            style="@style/MainMenu.text"
            android:text="@string/mainmenu.election_process"/>
    </LinearLayout>
    <LinearLayout
        style="@style/MainMenu.item"
        android:id="@+id/option.news">
        <ImageView
            style="@style/MainMenu.icon"
            android:src="@drawable/news"/>
        <TextView
            android:text="@string/mainmenu.news"
            style="@style/MainMenu.text"/>
    </LinearLayout>
</LinearLayout>